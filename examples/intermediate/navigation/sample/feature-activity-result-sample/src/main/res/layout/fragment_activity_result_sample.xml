<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/finish_with_result_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="finish with result"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/finish_without_result_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="finish without result"
        app:layout_constraintTop_toBottomOf="@+id/finish_with_result_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
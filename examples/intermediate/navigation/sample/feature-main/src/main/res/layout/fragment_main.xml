<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/activity_result_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="activity result sample"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/view_pager_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="View Pager sample"
        app:layout_constraintTop_toBottomOf="@+id/activity_result_button" />

    <TextView
        android:id="@+id/warning_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="To access view pager sample, please include the feature from app module build.gradle file"
        app:layout_constraintTop_toBottomOf="@+id/view_pager_button" />

</androidx.constraintlayout.widget.ConstraintLayout>